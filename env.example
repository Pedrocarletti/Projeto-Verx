# App/API
YAHOO_CRAWLER_API_HOST=127.0.0.1
YAHOO_CRAWLER_API_PORT=8000
YAHOO_CRAWLER_LOG_LEVEL=INFO

# Crawl defaults (useful for local scripts/jobs)
YAHOO_CRAWLER_DEFAULT_REGION=Argentina
YAHOO_CRAWLER_DEFAULT_OUTPUT=output/argentina.csv
YAHOO_CRAWLER_MAX_PAGES=
YAHOO_CRAWLER_TIMEOUT_SECONDS=45
YAHOO_CRAWLER_HEADLESS=true
YAHOO_CRAWLER_USE_CACHE=true
YAHOO_CRAWLER_CACHE_TTL_MINUTES=30
YAHOO_CRAWLER_REDIS_URL=redis://localhost:6379/0
YAHOO_CRAWLER_REDIS_KEY_PREFIX=yahoo_crawler:quotes

# Selenium/Chrome runtime
CHROME_BIN=/usr/bin/chromium
CHROMEDRIVER_PATH=/usr/bin/chromedriver

# Current CI/CD does not require AWS environment variables.
